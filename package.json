{
  "name": "static-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Modern Webpack boilerplate for small static sites!",
  "license": "MIT",
  "author": "Antoni Kepinski <a@kepinski.me> (https://kepinski.me)",
  "main": "app.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production",
    "now-build": "webpack --mode production",
    "test": "xo && stylelint 'public/css/*.css'"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "7.5.5",
    "babel-loader": "^8.0.6",
    "clean-css-loader": "^2.0.0",
    "css-loader": "^3.1.0",
    "extract-css-chunks-webpack-plugin": "^4.5.6",
    "file-loader": "^4.1.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "imagemin": "^7.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "imagemin-webp": "^5.1.0",
    "img-loader": "^3.0.1",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "terser-webpack-plugin": "^1.3.0",
    "url-loader": "^2.1.0",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-pwa-manifest": "^4.0.0",
    "workbox-webpack-plugin": "^4.3.1",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "core-js": "^3.1.4",
    "modern-normalize": "^0.5.0"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "import/no-unassigned-import": "off"
    }
  }
}
