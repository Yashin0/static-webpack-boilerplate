{
  "name": "static-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Modern Webpack boilerplate for small static sites!",
  "license": "MIT",
  "author": "Antoni Kepinski <a@kepinski.me> (https://kepinski.me)",
  "main": "app.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production",
    "now-build": "webpack --mode production",
    "test": "xo && stylelint 'public/css/*.css'"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "7.4.4",
    "babel-loader": "^8.0.5",
    "clean-css-loader": "^1.1.0",
    "css-loader": "^2.1.1",
    "extract-css-chunks-webpack-plugin": "^4.3.2",
    "file-loader": "^3.0.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "imagemin": "^6.1.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "imagemin-webp": "^5.0.0",
    "img-loader": "^3.0.1",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "terser-webpack-plugin": "^1.2.3",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-pwa-manifest": "^4.0.0",
    "workbox-webpack-plugin": "^4.3.1",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "core-js": "^3.0.1",
    "modern-normalize": "^0.5.0"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "import/no-unassigned-import": "off"
    }
  }
}
